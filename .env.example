# Supabase
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Travelpayouts
TRAVELPAYOUTS_TOKEN=your-travelpayouts-token
TRAVELPAYOUTS_MARKER=your-marker-id

# Amadeus (optional — fallback for flight prices)
AMADEUS_API_KEY=your-amadeus-key
AMADEUS_API_SECRET=your-amadeus-secret

# LiteAPI (hotel prices)
LITEAPI_API_KEY=your-liteapi-key

# Sentry (optional — error monitoring)
NEXT_PUBLIC_SENTRY_DSN=https://your-dsn@sentry.io/project-id

# Vercel (set automatically in Vercel deployments)
VERCEL_ENV=development

# Cron auth (set in Vercel dashboard)
CRON_SECRET=your-cron-secret
