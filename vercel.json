{
  "buildCommand": "npx expo export --platform web",
  "outputDirectory": "dist",
  "framework": null,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "crons": [
    {
      "path": "/api/prices/refresh",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/prices/refresh-hotels",
      "schedule": "0 3 * * *"
    }
  ]
}
